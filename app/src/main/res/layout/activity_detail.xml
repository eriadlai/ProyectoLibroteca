<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailAct">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="247dp"
                android:layout_height="182dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/ic_dashboard_black_24dp" />

            <TextView
                android:id="@+id/nombrelibroL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="NOMBRE DE LIBRO" />

            <TextView
                android:id="@+id/generoL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERO" />

            <TextView
                android:id="@+id/fechaL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FECHA DE PUBLICACION" />

            <TextView
                android:id="@+id/paginasL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO DE PAGINAS" />

            <TextView
                android:id="@+id/paisL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAIS" />

            <TextView
                android:id="@+id/editorialL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDITORIAL" />

            <TextView
                android:id="@+id/edicionL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDICION" />

            <TextView
                android:id="@+id/autoresL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AUTORES" />

            <TextView
                android:id="@+id/isbnL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ISBN" />

            <TextView
                android:id="@+id/apaL_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Referencia APA" />

            <Button
                android:id="@+id/agregarcoleccion_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AGREGAR A COLECCION" />

            <Button
                android:id="@+id/agregarfavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AGREGAR A FAVORITOS" />
            <View        android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>